Screen:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg2.jpg'  # Replace 'your_image.png' with the path to your background image
    MDCard:
        size_hint: None, None
        size: 500, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: [0, 0, 0, 0]  # Set the background color to fully transparent
        padding: 25
        spacing: 25
        orientation: 'vertical'
        spacing: "30dp"

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            valign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "username"
            mode: "round"
            icon_right: "account"
            size_hint_x: None
            width: 400
            height: 20
            font_size: 15
            pos_hint: {'center_x': 0.5}
            padding_y: 15

        MDTextField:
            id: password
            hint_text: "password"
            mode: "round"
            icon_right: "eye-off"
            size_hint_x: None
            width: 400
            height: 20
            font_size: 15
            pos_hint: {'center_x': 0.5}
            password: True
            padding_y: 15

        RelativeLayout:
            size_hint_y: None
            height: 40
            pos_hint: {'center_x': 0.5}

            MDRoundFlatButton:
                text: "LOGIN"
                font_size: 18
                on_press: app.logger()
                size_hint: None, None
                size: 120, 40
                pos_hint: {'center_x': 0.3}
                md_bg_color: "blue"
                text_color:"white"

            MDRoundFlatButton:
                text: "CLEAR"
                font_size: 18
                on_press: app.clear()
                size_hint: None, None
                size: 120, 40
                pos_hint: {'center_x': 0.7}
                md_bg_color: "blue"
                text_color:"white"


        Widget:
            size_hint_y: None
            height: 10
